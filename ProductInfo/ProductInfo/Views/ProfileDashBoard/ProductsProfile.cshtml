
@{
    ViewBag.Title = "ProductsProfile";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<h2 class="text-center">Product List</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 10; i++)
        {
            <tr>
                <td>
                    @ViewBag.AllProducts[i].Id
                </td>
                <td>
                    @ViewBag.AllProducts[i].Name
                </td>
                <td>
                    @ViewBag.AllProducts[i].Price
                </td>
            </tr>
        }
    </tbody>
</table>

