
@{
    ViewBag.Title = "Login";
}

<h2>Login Form</h2>
@{
    bool CheckHobby(string hobby)
    {
        if(Model != null && Model.Hobbies != null)
        {
            foreach(var item in Model.Hobbies)
            {
                if (item.Equals(hobby)) return true;
            }
        }
        return false;
    }
 }

<p>@Html.ValidationSummary()</p>
<form method="post">
    <table>
        <tr>
            <td>Name: <input type="text" name="Name" value="@(Model == null ? "" : Model.Name)" class="form-control" /> <span class="btn-danger">@Html.ValidationMessage("Name")</span></td>
        </tr>
        <tr>
            <td>ID: <input type="text" name="Id" class="form-control" /></td>
        </tr>
        <tr>
            <td><lable for="gender"> Gender:</lable></td>
            <td>
                Male: <input type="radio" name="Gender" value="male" />
                Female: <input type="radio" name="Gender" value="female" />
            </td>
        </tr> 
        <tr>
            <td><lable for="profession"> Profession:</lable></td>
            <td>
                <select name="Profession">
                    <option value="">Select</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Teacher">Teacher</option>
                    <option value="engineer">Engineer</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><lable for="hobbies"> Hobbies:</lable></td>
            <td>
                <input type="checkbox" checked=@(CheckHobby("Gaming")) value="Gaming" name="Hobbies[]" /> Gaming
                <input type="checkbox" checked=@(CheckHobby("Reading")) value="Reading" name="Hobbies[]" /> Reading
                <input type="checkbox" checked=@(CheckHobby("Travelling")) value="Travelling" name="Hobbies[]" /> Travelling
            </td>
        </tr>
        <tr>
            <td>DOB: <input type="date" value="@(Model == null ? "" : Model.Dob.Date.ToString("yyyy-MM-dd"))" name="Dob" class="form-control" /></td>
        </tr>
        <tr>
            <td><input type="submit" name="Submit" class="btn btn-danger" /></td>
        </tr>

    </table>
</form>

